@page "/hull-images"

@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IJSRuntime JS
@inject IHullImagesApi Api

@* Dev Tools: isolated, expandable, starts collapsed (no Reload button) *@
<div class="mb-4 flex justify-end">
    <button class="inline-flex items-center rounded-md border border-gray-300 bg-white px-2.5 py-1.5 text-xs font-medium text-gray-700 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" hidden="@_devToolsOpen" @onclick="ToggleDevTools" disabled="@_uploading" title="@(_uploading ? "Upload in progress" : null)">Open Dev Tools</button>
    @if (_devToolsOpen)
    {
        <div data-devtools-panel class="mt-2 w-full max-w-md rounded-lg border border-gray-200 bg-white shadow-sm">
            <div class="flex items-center justify-between border-b border-gray-200 px-3 py-2">
                <strong class="text-sm">Dev Tools</strong>
                <button class="inline-flex items-center rounded-md p-1 text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500/30" title="Close Dev Tools" aria-label="Close Dev Tools"
                        @onclick="ToggleDevTools">
                    <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0    
  010-1.414z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
            <div class="p-3 space-y-3">
                <!-- Mode toggle -->
                <div class="mb-2">
                    <input class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox" role="switch" id="tusSwitch" @bind="_useTus" disabled="@_uploading" />
                    <label class="ml-2 select-none" for="tusSwitch">Mode: <strong>@(_useTus ? "TUS" : "ONE SHOT")</strong></label>
                </div>

                <!-- Middle: Maintenance actions -->
                <div class="flex flex-wrap gap-2 mb-2">
                    <button class="inline-flex items-center rounded-md border border-amber-500 px-2.5 py-1.5 text-xs font-medium text-amber-700 hover:bg-amber-50 disabled:opacity-50 disabled:cursor-not-allowed" @onclick="PruneMissing" disabled="@_uploading">Prune Missing</button>
                </div>

                <!-- Bottom: Upload controls (dropdown triggers upload on change) -->
                <div class="flex flex-wrap gap-2 items-center mt-3">
                    <select class="min-w-[220px] rounded border border-gray-300 bg-white px-2 py-1 text-sm disabled:opacity-50" style="width:auto;" value="@_selectedTestAsset" @onchange="OnTestAssetChanged" @onfocus="LoadTestAssetsIfNeeded" disabled="@_uploading">
                        <option value="" disabled selected>Upload test asset...</option>
                        @foreach (var f in _testAssets)
                        {
                            <option value="@f">@f</option>
                        }
                    </select>
                </div>
                @if (!string.IsNullOrEmpty(_pruneInfo))
                {
                    <div class="text-green-600 text-sm mt-2">@_pruneInfo</div>
                }
                
            </div>
        </div>
    }
</div>

@* Main header, then upload controls directly below *@
<div class="mb-2">
    <h1 class="text-2xl font-semibold mb-2">Hull Images</h1>
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center">
        <div class="flex items-center gap-2">
            <InputFile id="fileInput" class="sr-only" OnChange="OnFilesSelected" multiple accept=".jpg,.jpeg,.png,.webp,.gif,.bmp,.tif,.tiff" />
            <button type="button" class="inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed" @onclick="TriggerFileDialog" disabled="@_uploading" title="@(_uploading ? "Upload in progress" : null)">
                <span class="mr-1">üìÅ</span> Upload Hull Image
            </button>
            @if (!string.IsNullOrEmpty(_selectedLabel))
            {
                <span class="text-gray-500 text-sm">@_selectedLabel</span>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_error))
    {
        <p class="text-red-600">@_error</p>
    }
    @if (!string.IsNullOrEmpty(_info))
    {
        <p class="text-sky-600">@_info</p>
    }
    @if (_uploading)
    {
        <div class="my-2">
            <div>Uploading: @_currentFileName (@FormatBytes(_bytesUploaded) / @FormatBytes(_currentTotalBytes))</div>
            <div class="h-5 w-full rounded bg-gray-200">
                <div class="h-5 rounded bg-blue-600 text-center text-xs font-medium leading-5 text-white" style="width: @_progressPercent%" aria-valuenow="@_progressPercent" aria-valuemin="0" aria-valuemax="100">@_progressPercent%</div>
            </div>
            @if (_useTus)
            {
                <div class="mt-2">
                    @if (!_paused)
                    {
                        <button class="inline-flex items-center rounded-md border border-amber-500 px-3 py-1.5 text-sm font-medium text-amber-700 hover:bg-amber-50" @onclick="PauseTus">Pause Upload</button>
                    }
                    else
                    {
                        <button class="inline-flex items-center rounded-md border border-emerald-600 px-3 py-1.5 text-sm font-medium text-emerald-700 hover:bg-emerald-50" @onclick="ResumeTus">Resume Upload</button>
                        <span class="ml-2 inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-800 align-middle">Paused</span>
                    }
                </div>
            }
        </div>
    }
    
</div>

